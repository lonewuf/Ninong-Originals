<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/fontawesome-all.css">
  <link rel="stylesheet" href="/css/jquery.fancybox.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <script src="/js/jquery-3.3.1.min.js"></script>
</head>
<body>

  <nav class="navbar navbar-expand-sm navbar-light bg-light mb-3">
    <div class="container">
      <a class="navbar-brand" href="/">GulapaGadgets</a>
      <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarNav"><span class="navbar-toggler-icon"></span></button>
      <div class="collapse navbar-collapse" id="navbarNav">    
        <ul class="navbar-nav mr-auto">
          <% pages.forEach(page => { %>
            <% if(page.slug == 'home') { %>
              <li class="nav-item"><a href="/" class="nav-link"><%= page.title %></a></li>
            <% } else { %>
              <li class="nav-item"><a href="/<%= page.slug %>" class="nav-link"><%= page.title %></a></li>
            <% }  %>              
          <% }) %>
          </ul>
          <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                  <a href="/cart/checkout" class="nav-link">
                    Mycart(
                    <% if(typeof cart !== "undefined") { %>
                      <%= cart.length %>
                    <% } else {%>
                      0
                    <% } %>
                    )
                  </a>
              </li>
              <% if (user) { %>
                <li class="nav-item">
                  
                  <li class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Hi, <%= user.name %></a>
                    <div class="dropdown-menu">
                      <a href="/users/product-status/<%= user.username %>" class="dropdown-item">Product Status</a>
                      <a href="#" class="dropdown-item">Profile</a>
                      <a href="/users/logout" class="dropdown-item">Logout 3</a>
                    </div>
                  </li>
    
            

                  <!-- <a class="nav-link" href="/users/logout">Hi, <%= user.name %> ( logout )</a> -->
                
                
                </li>
                <% } else {%>
                  <li class="nav-item"><a href="/users/login" class="nav-link">Login</a></li>
                  <li class="nav-item"><a href="/users/register" class="nav-link">Register</a></li>     
                <% } %>
                <% if (user && user.admin == 1) { %>
                <li class="nav-item" ><a class="nav-link" href="/admin/pages">Admin Area</a></li>
                <% }%>         
          </ul>
        </div>
      </div>
  </nav>
  <div class="container">
    <%- messages('messages', locals) %>

    <% if(errors) {%>
      <% errors.forEach(err => { %>
        <div class="alert alert-danger">
          <%= err.msg %>
        </div>
      <% }) %>
    <% } %>

    <div class="row">
      <div class="col-sm-12 col-md-3">
        <h3>Categories</h3>
        <ul class="list-group">
          <li class="list-group-item"><a href="/products">All Products</a></li>
          <% categories.forEach(category => {%>
            <li class="list-group-item"><a href="/products/<%= category.slug %>"><%= category.title %></a></li>
          <% }); %>
        </ul>
      </div>
      <div class="col-sm-12 col-md-1"></div>
      <div class="col-sm-12 col-md-8">

      